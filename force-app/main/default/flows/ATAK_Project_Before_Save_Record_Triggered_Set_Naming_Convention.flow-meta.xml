<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <description>Flow that gives an automatic name to ATAK projects that do not receive their name from ATAK</description>
    <environments>Default</environments>
    <formulas>
        <name>formATAKProjectName</name>
        <dataType>String</dataType>
        <expression>&apos;ContractType_Dienstenpakket_&apos;&amp;{!$Record.Financial_Account__r.Alias_commercial_customer_name__c}&amp;&apos;_Locatie_FacilityType&apos;</expression>
    </formulas>
    <interviewLabel>[ATAK Project][Before-Save][Record-Triggered] Set Naming Convention {!$Flow.CurrentDateTime}</interviewLabel>
    <label>[ATAK Project][Before-Save][Record-Triggered] Set Naming Convention</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <description>Adds the pre-formatted name to the deelproject if no name is entered (via ATAK)</description>
        <name>Add_Name</name>
        <label>Add Name</label>
        <locationX>176</locationX>
        <locationY>287</locationY>
        <inputAssignments>
            <field>Subproject_Name__c</field>
            <value>
                <elementReference>formATAKProjectName</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Add_Name</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Subproject_Name__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>ATAK_Project__c</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
