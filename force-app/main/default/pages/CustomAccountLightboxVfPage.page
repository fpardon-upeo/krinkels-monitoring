<apex:page showHeader="false" sidebar="false" standardController="Account">
    <apex:includeLightning />
    <div id="lightbox"></div> 
    <script>
        $Lightning.use("c:CustomAccountLightboxApp", function() {
            $Lightning.createComponent(
                "c:fslConsoleAccount", 
                { 
                    recordId: "{!account.Id}"
                },
                "lightbox",
                function() {
                    console.log('Lightbox component loaded successfully');
                }
            );
        });
    </script>
</apex:page>