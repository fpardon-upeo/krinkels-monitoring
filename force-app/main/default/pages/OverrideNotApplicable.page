<apex:page standardController="WorkStep" extensions="OverrideNotApplicableController" lightningStylesheets="true">
    <apex:form id="form">
        <apex:pageBlock mode="edit">
            <!-- Multi-Picklist Field -->
            <apex:pageBlockSection title="Not Applicable Reasons" columns="1">
                <apex:inputField value="{!workStep.Not_Applicable_Reasons__c}" required="true"/>
            </apex:pageBlockSection>
            
            <!-- Text Area Field -->
            <apex:pageBlockSection title="Comments" columns="1">
                <apex:inputField value="{!workStep.Not_Applicable_Comments__c}" />
            </apex:pageBlockSection>

            <!-- Save and Cancel Buttons -->
            <apex:pageBlockButtons >
                <apex:commandButton value="Save" action="{!save}" />
                <apex:commandButton value="Cancel" action="{!cancel}" immediate="true" />
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>