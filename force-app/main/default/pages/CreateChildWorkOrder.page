<apex:page controller="CreateChildWorkOrderController" showHeader="false" sidebar="false" lightningStylesheets="true">
  <apex:form >
    <apex:pageBlock title="Create Child Work Order">
      <apex:pageMessages />

      <apex:pageBlockSection columns="1">
        <apex:inputField value="{!childWorkOrder.Subject}" required="true"/>
        <apex:inputField value="{!childWorkOrder.Description}"/>
        <apex:inputField value="{!childWorkOrder.Priority}"/>
      </apex:pageBlockSection>

      <apex:pageBlockButtons location="bottom">
        <apex:commandButton value="Create" action="{!createChildWorkOrder}"
                            oncomplete="if({!success}) parent.postMessage('closeLightbox','*');"
                            rerender="none"/>
        <apex:commandButton value="Cancel" onclick="parent.postMessage('closeLightbox','*'); return false;"/>
      </apex:pageBlockButtons>
    </apex:pageBlock>
  </apex:form>
</apex:page>