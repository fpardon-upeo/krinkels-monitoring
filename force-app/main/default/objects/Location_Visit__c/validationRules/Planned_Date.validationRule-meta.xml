<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Planned_Date</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    Fixed_date_Already_planned__c = TRUE,
    ISBLANK(Visit_Date__c)
)</errorConditionFormula>
    <errorDisplayField>Visit_Date__c</errorDisplayField>
    <errorMessage>Please enter the date of the planned visit.</errorMessage>
</ValidationRule>
